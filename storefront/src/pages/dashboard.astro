---
import Layout from "../layouts/Layout.astro";
import DashboardApp from "@/features/dashboard/components/DashboardApp";
---

<Layout title="Dashboard" mainClass="max-w-5xl mx-auto px-4 pt-28 pb-16">
  <style is:global>
    html[data-dashboard-ready="true"] #dashboard-placeholder {
      opacity: 0 !important;
      visibility: hidden !important;
    }
  </style>

  <section class="relative min-h-[640px]">
    <div
      id="dashboard-placeholder"
      aria-hidden="true"
      class="pointer-events-none absolute inset-0 z-0 opacity-100 transition-opacity duration-300"
    >
      <div class="space-y-8 animate-pulse">
        <header class="space-y-4 text-center">
          <div class="flex justify-between gap-2">
            <div class="h-8 w-20 rounded-full bg-black/10"></div>
            <div class="h-8 w-24 rounded-full bg-black/10"></div>
          </div>
          <div class="mx-auto h-2.5 w-20 rounded-full bg-black/10"></div>
          <div class="mx-auto h-10 w-52 rounded-2xl bg-black/10"></div>
          <div class="mx-auto h-3 w-72 rounded-full bg-black/10"></div>
        </header>

        <div class="rounded-3xl border border-black/5 bg-white/70 p-5 md:p-6">
          <div class="h-10 w-full rounded-xl border border-black/5 bg-white/60"></div>

          <div class="mt-4 overflow-hidden rounded-2xl border border-black/5 bg-white/60">
            <div class="hidden grid-cols-6 gap-3 border-b border-black/5 bg-black/[0.03] px-4 py-3 sm:grid">
              <div class="h-2.5 w-14 rounded-full bg-black/10"></div>
              <div class="h-2.5 w-16 rounded-full bg-black/10"></div>
              <div class="h-2.5 w-14 rounded-full bg-black/10"></div>
              <div class="h-2.5 w-16 rounded-full bg-black/10"></div>
              <div class="h-2.5 w-12 rounded-full bg-black/10"></div>
              <div class="h-2.5 w-14 rounded-full bg-black/10"></div>
            </div>

            <div class="space-y-0">
              {
                Array.from({ length: 5 }).map((_, index) => (
                  <div
                    class:list={[
                      "grid gap-3 border-b border-black/5 px-4 py-3 sm:grid-cols-6 sm:items-center",
                      index % 2 === 1 && "bg-black/[0.02]",
                    ]}
                  >
                    <div class="h-4 w-28 rounded-full bg-black/10"></div>
                    <div class="h-4 w-20 rounded-full bg-black/10"></div>
                    <div class="h-4 w-16 rounded-full bg-black/10"></div>
                    <div class="h-6 w-20 rounded-full bg-black/10"></div>
                    <div class="h-4 w-20 rounded-full bg-black/10"></div>
                    <div class="flex gap-2">
                      <div class="h-8 w-16 rounded-lg bg-black/10"></div>
                      <div class="h-8 w-16 rounded-lg bg-black/10"></div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative z-10">
      <DashboardApp client:only="react" />
    </div>
  </section>
</Layout>
